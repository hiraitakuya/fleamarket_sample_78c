.Signup
  .Header
    .Header__logo
      = link_to '#', class: "Header__logo--img" do
        = image_tag "logo.png",size: "140x50", alt: "icon"
  .Main
    %h1.Main__header 新規会員登録
    .Main__Container
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        -# = devise_error_messages!
        .Main__Container__field
          .Main__Container__field__label
            %p ニックネーム
            %span.requier 必須
          = f.text_field :nickname, autofocus: true, autocomplete: "nickname", placeholder: '例：フリマ太郎', class: "Main__Container__field__input"
        .Main__Container__field
          .Main__Container__field__label
            %p メールアドレス
            %span.requier 必須
          = f.email_field :email, autocomplete: "email", placeholder: 'PC・携帯どちらでも可', class: "Main__Container__field__input"
        .Main__Container__field
          .Main__Container__field__label
            %p パスワード
            %span.requier 必須
          = f.password_field :password, autocomplete: "off" ,placeholder: '7文字以上の半角英数字', class: "Main__Container__field__input"
          %p.Main__Container__field__text ※英数字と数字の両方を含めて設定ください
        .Main__Container__field
          .Main__Container__field__label
            %p 確認用パスワード
            %span.requier 必須
          = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: '上と同じパスワードを入力してください', class: "Main__Container__field__input"
        .Main__Container__field
          .Main__Container__field__label
            %p お名前
            %span.requier 必須
          = f.text_field :family_name, autocomplete: "family_name", placeholder: '例：山田', class: "Main__Container__field__input"
          = f.text_field :first_name, autocomplete: "first_name", placeholder: '例：太郎', class: "Main__Container__field__input"
        .Main__Container__field
          .Main__Container__field__label
            %p お名前カナ
            %span.requier 必須
          = f.text_field :family_name_kana, autocomplete: "family_name_kana", placeholder: '例：ヤマダ', class: "Main__Container__field__input"
          = f.text_field :first_name_kana, autocomplete: "first_name_kana", placeholder: '例：タロウ', class: "Main__Container__field__input"
        .Main__Container__field
          .Main__Container__field__label
            %p 生年月日
            %span.requier 必須
          = f.text_field :birth_day, autocomplete: "off", placeholder: '例：1986年01月01日→19860101', class: "Main__Container__field__input"
        = f.fields_for :sending_destination do |f|
          .Main__Container__field
            .Main__Container__field__label
              %p お届け先氏名
              %span.requier 必須
            = f.text_field :destination_first_name, autocomplete: "first_name", placeholder: '例：山田', class: "Main__Container__field__input"
            = f.text_field :destination_family_name, autocomplete: "family_name", placeholder: '例：太郎', class: "Main__Container__field__input"
          .Main__Container__field
            .Main__Container__field__label
              %p お届け先氏名カナ
              %span.requier 必須
            = f.text_field :destination_family_name_kana, autocomplete: "destination_family_name_kana", placeholder: '例：ヤマダ', class: "Main__Container__field__input"
            = f.text_field :destination_first_name_kana, autocomplete: "destination_first_name_kana", placeholder: '例：タロウ', class: "Main__Container__field__input"
          .Main__Container__field
            .Main__Container__field__label
              %p 郵便番号
              %span.requier 必須
            = f.text_field :post_code, autocomplete: "post_code", placeholder: '例：1234567', class: "Main__Container__field__input"
          .Main__Container__field
            .Main__Container__field__label
              %p 都道府県
              %span.requier 必須
            = f.text_field :prefecture_code, autocomplete: "prefecture_code", placeholder: '例：東京都', class: "Main__Container__field__input"
          .Main__Container__field
            .Main__Container__field__label
              %p 市区町村
              %span.requier 必須
            = f.text_field :city, autocomplete: "city", placeholder: '例：渋谷区', class: "Main__Container__field__input"
          .Main__Container__field
            .Main__Container__field__label
              %p 番地
              %span.requier 必須
            = f.text_field :house_number, autocomplete: "house_number", placeholder: '例：1番地', class: "Main__Container__field__input"
          .Main__Container__field
            .Main__Container__field__label
              %p 建物名
              %span.option 任意
            = f.text_field :building_name, autocomplete: "building_name", placeholder: '例：フリママンション101号室', class: "Main__Container__field__input"
          .Main__Container__field
            .Main__Container__field__label
              %p 電話番号
              %span.option 任意
            = f.text_field :phone_number, autocomplete: "phone_number", placeholder: '例：080XXXXXXXX', class: "Main__Container__field__input"
        .Main__Container__actions
          = f.submit "登録する", class: "Main__Container__actions__submit"
