.Signup
  .Signup__Header
    .Signup__Header__logo
      = link_to '#', class: "Signup__Header__logo__img" do
        = image_tag "logo.png",size: "140x50", alt: "icon"
  .Signup__Main
    %h1.Signup__Main__header 新規会員登録
    .Signup__Main__info
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .Signup__Main__info__field
          .Signup__Main__info__field__title
            %p ニックネーム
            %span.requier 必須
          = f.text_field :nickname, autofocus: true, autocomplete: "nickname", placeholder: '例：フリマ太郎', class: "Signup__Main__info__field__form"
        .Signup__Main__info__field
          .Signup__Main__info__field__title
            %p メールアドレス
            %span.requier 必須
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'PC・携帯どちらでも可', class: "Signup__Main__info__field__form"
        .Signup__Main__info__field
          .Signup__Main__info__field__title
            %p パスワード
            %span.requier 必須
          = f.password_field :password, autocomplete: "off" ,placeholder: '7文字以上の半角英数字', class: "Signup__Main__info__field__form"
          %p.Signup__Main__info__field__text ※英数字と数字の両方を含めて設定ください
        .Signup__Main__info__field
          .Signup__Main__info__field__title
            %p 確認用パスワード
            %span.requier 必須
          = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: '上と同じパスワードを入力してください', class: "Signup__Main__info__field__form"
        .Signup__Main__info__field
          .Signup__Main__info__field__title
            %p お名前
            %span.requier 必須
          = f.text_field :famly_name, autofocus: true, autocomplete: "famly_name", placeholder: '例：山田', class: "Signup__Main__info__field__form"
          = f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: '例：太郎', class: "Signup__Main__info__field__form"
        .Signup__Main__info__field
          .Signup__Main__info__field__title
            %p お名前カナ
            %span.requier 必須
          = f.text_field :famly_name_kana, autofocus: true, autocomplete: "famly_name_kana", placeholder: '例：ヤマダ', class: "Signup__Main__info__field__form"
          = f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: '例：タロウ', class: "Signup__Main__info__field__form"
        .Signup__Main__info__field
          .Signup__Main__info__field__title
            %p 生年月日
            %span.requier 必須
          = f.text_field :birth_day, autofocus: true, autocomplete: "postal_code", placeholder: '例：1986年01月01日→19860101', class: "Signup__Main__info__field__form"

          = f.submit "登録する", class: "Signup__Main__info__field__submit"

        -# = render "devise/shared/links"
